<Window x:Class="Statki.Serwer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Statki.Serwer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Serwer gry Statki" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Name="btnStart" Content="Startuj serwer" Click="btnStart_Click" Height="30"/>
            <TextBox Name="txtLog" Margin="0,10,0,0" Height="200" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
