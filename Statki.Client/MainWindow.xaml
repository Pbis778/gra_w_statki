<Window x:Class="Statki.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Statki.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBox Name="txtIP" Width="200" Text="127.0.0.1"/>
            <Button Name="btnConnect" Click="btnConnect_Click" Content="Połącz" Margin="0,10,0,0"/>
            <TextBox Name="txtMessage" Width="200"/>
            <Button Name="btnSend" Click="btnSend_Click" Content="Wyślij wiadomość" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
